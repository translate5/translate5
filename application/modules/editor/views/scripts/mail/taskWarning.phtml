/* @var $this Zend_View */
$this->render('general.phtml');

$this->subject = $this->translate->_('Translate5 - Warnung zu Aufgabe').' "'.$this->task->getTaskNr().' - '.$this->task->getTaskName().'"';

//is automatically merged with data from general.phtml
$data = [
    'header' => $this->header,
    'footer' => $this->footer,
    'warning' => $this->event->message,
    'domain' => $this->event->domain,
];
if(!empty($this->event->eventCode)){
    $data['code'] = $this->event->getCodeAnchor();
}

$mailBody = $this->templateApply('{header}
Im Projektportal {portalLink} gab es zu nachfolgender Aufgabe folgende Warnung: <br />
<br />
<b>Warnung:</b> {warning}<br />
<b>Code:</b> {code}<br />
<b>Bereich:</b> {domain}<br />
Weitere Informationen finden sich in der Anwendung in den Aufgabeneigenschaften im Reiter Ereignisse. <br /><br />
{taskFragment}{footer}', $data);

$this->textbody = strip_tags($mailBody);
echo $mailBody;

