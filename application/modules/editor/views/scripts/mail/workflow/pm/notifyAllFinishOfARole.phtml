    $this->subject = $this->translate->_('Translate5 - Aufgabe automatisch abgeschlossen') . ' "' . $this->task->getTaskNr() . ' - ' . $this->task->getTaskName() . '"';
    $action = $this->templateApply('Im Projektportal {portalLink} wurde die Aufgabe <b>{task.taskNr} - {task.taskName}</b> aufgrund einer Terminüberschreitung automatisch für alle Benutzer der Rolle <i>{previousRole}</i> abgeschlossen.<br />', [
        'task' => $this->task->getDataObject(),
        'previousRole' => $this->translate->_($this->triggeringStep),
