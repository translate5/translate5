<phpunit bootstrap="bootstrap-unit.php" cacheResult="true" colors="true">
    <testsuites>
        <testsuite name="unit">
            <directory>Unit</directory>
        </testsuite>
        <testsuite name="functional">
            <directory>Functional</directory>
        </testsuite>
    </testsuites>
    <coverage>
        <include>
            <directory suffix=".php">../</directory>
        </include>
        <exclude>
            <directory suffix=".php">./</directory>
        </exclude>
    </coverage>
</phpunit>
