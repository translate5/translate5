{
    "config": {
        "platform": {
            "php": "7.3"
        }
    },
	"require" : {
		"wikimedia/composer-merge-plugin" : "~1.4",
		"comcast/php-legal-licenses" : "~1.1"
	},
	"extra" : {
		"merge-plugin" : {
			"include" : [
				"application/modules/*/composer.local.json",
